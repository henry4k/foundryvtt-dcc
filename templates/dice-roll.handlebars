<div class="dice-roll">
    {{#if flavor}}
        <div class="dice-flavor">{{flavor}}</div>
    {{/if}}
    <div class="dice-result">
        <div class="dice-formula">
            {{#each parts}}
                {{#if isDie}}
                    <span class="dice-rolls">
                        {{#each rolls}}
                            <span class="roll {{classes}}" title="d{{sides}}">{{result}}</span>
                        {{/each}}
                    </span>
                {{/if}}
                {{#unless isDie}}
                    {{formula}}
                {{/unless}}
            {{/each}}
            =
            <span class="roll-total">{{total}}</span>
        </div>
    </div>
</div>
